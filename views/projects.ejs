    <main class="main-content">
        <section class="project-page-header">
            <h2 class="gradient-text-green">Work. Hobby. Open Source.</h2>
            <p>
                I'm obsessed with side projects and building in public. 
                Here are some of the websites and apps I've built.
            </p>
        </section>

        <section>
            <h3>Featured Projects</h3>
            <div class="project-grid">
                
                <% projects.forEach(project => { %>
                    <a href="/projects/<%= project.slug %>" class="project-card">
                        <div class="project-card-title">
                            <%= project.title %>
                        </div>
                        <p class="project-card-tagline"><%= project.tagline %></p>
                        <p class="project-card-stats"><%= project.stats %></p>
                    </a>
                <% }) %>

            </div>
        </section>
    </main>

    <div class="command-palette-overlay" id="command-palette-overlay">
        <div class="command-palette" id="command-palette">
            <input type="text" placeholder="Type a command or search..." class="command-input" id="command-input">
            <ul class="command-list" id="command-list"></ul>
        </div>
    </div>
    
